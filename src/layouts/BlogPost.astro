---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { BlogDate } from '../utils/BlogDate'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

let { title, description, pubDate, updatedDate, heroImage } = Astro.props.content

pubDate = pubDate ? BlogDate.fromDateString(pubDate).toDateString() : ''
updatedDate = updatedDate ? BlogDate.fromDateString(updatedDate).toDateString() : ''
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
        <h1 class="title">{title}</h1>
        {
          pubDate && (
            <small>
              <time>{pubDate}</time>
            </small>
          )
        }
        {
          updatedDate && (
            <div>
              <small>
                Last updated on <time>{updatedDate}</time>
              </small>
            </div>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
